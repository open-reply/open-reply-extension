rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /users/{fileId} {
      
      allow read;
      
      allow write: if request.auth != null
        && fileId.matches('^[a-zA-Z0-9]+\\.png$')
        && request.auth.uid == fileId.replace('.png', '')
        && request.resource.contentType == 'image/png';
    }
  }
}