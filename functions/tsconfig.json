{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "paths": {
      "types/*": ["../types/*"],
      "constants/*": ["../constants/*"],
      "utils/*": ["../utils/*"],
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
